                format: 'dd/mm/yyyy',
                todayHighlight: true,
                autoclose: true
            }).on('show', function () {
                isStartDatepickerOpen = true;
            }).on('hide', function () {
                isStartDatepickerOpen = false;
            });

            // Toggle datepicker when the input field or icon is clicked
            $('#start-datepicker-input, #start-datepicker-icon').on('click', function () {
                if (isStartDatepickerOpen) {
                    $('#start-datepicker-input').datepicker('hide');
                } else {
                    $('#start-datepicker-input').datepicker('show');
                }
            });

            var isEndDatepickerOpen = false;
            $('#end-datepicker-input').datepicker({
                format: 'dd/mm/yyyy',
                todayHighlight: true,
                autoclose: true
            }).on('show', function () {
                isEndDatepickerOpen = true;
            }).on('hide', function () {
                isEndDatepickerOpen = false;
            });

            // Toggle datepicker when the input field or icon is clicked
            $('#end-datepicker-input, #end-datepicker-icon').on('click', function () {
                if (isEndDatepickerOpen) {
                    $('#end-datepicker-input').datepicker('hide');
                } else {
                    $('#end-datepicker-input').datepicker('show');
                }
            });
        });

        //Implementation for conditionally rendering an input field
        function chargingProps() {
            const carType = document.getElementsByName("carType");
            const dcFastChargingContainer = document.getElementById('dcFastChargingContainer');
            const homeChargerContainer = document.getElementById('homeChargerContainer');

            if (carType[0].checked || carType[1].checked) {
                dcFastChargingContainer.classList.remove('d-none');
                homeChargerContainer.classList.remove('d-none');
            } else {
                dcFastChargingContainer.classList.add('d-none');
                homeChargerContainer.classList.add('d-none');
            }
        }

        //Implementation to not allow negative numbers on input fields
        document.querySelectorAll('.number-input').forEach(function (input) {
            input.addEventListener('input', function () {
                if (this.value < 0) {
                    this.value = 0;
                }
            });
        });


        //Implementation for uploading picture on the form's frontend from youtube video
        const dropArea = document.getElementById("dropArea");
        const inputFile = document.getElementById("inputFile");
        const imgView = document.getElementById("imgView");
        const imgElement = imgView.querySelector("img");
        const textElement = imgView.querySelector("p");

        inputFile.addEventListener("change", uploadImage);

        function uploadImage() {
            if (inputFile.files && inputFile.files[0]) {
                let imgLink = URL.createObjectURL(inputFile.files[0]);
                imgElement.src = imgLink;
                imgElement.style.filter = "none"; // Remove grayscale and brightness filters
                textElement.style.display = "none"; // Hide the text
            }
        }

    </script>
