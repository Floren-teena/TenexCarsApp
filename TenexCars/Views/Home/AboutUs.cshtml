@{
    ViewData["Title"] = "AboutUs";
}

@{
    Layout = "_FooterLayout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2 text-center">
            <h1 class="display-4 mb-4">About TenexCar</h1>
            <p class="lead mb-5">TenexCar is your premier destination for hassle-free car rentals. With a wide selection of vehicles and unparalleled customer service, we're here to make your journey smooth and enjoyable.</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-primary">Our Mission</h2>
                    <p class="card-text">To provide our customers with safe, reliable, and affordable car rental solutions, ensuring their travel needs are met with the utmost convenience and satisfaction.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-primary">Our Vision</h2>
                    <p class="card-text">To become the most trusted and preferred car rental service, known for our exceptional fleet, innovative solutions, and commitment to customer happiness.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h2 class="text-center mb-4">Why Choose TenexCar?</h2>
            <div class="row text-center">
                <div class="col-md-4 mb-3">
                    <i class="fas fa-car fa-3x text-primary mb-3"></i>
                    <h4>Wide Selection</h4>
                    <p>From compact cars to luxury vehicles, we have the perfect ride for every occasion.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
                    <h4>Competitive Prices</h4>
                    <p>Enjoy great value with our transparent pricing and special offers.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                    <h4>24/7 Support</h4>
                    <p>Our dedicated team is always ready to assist you, anytime, anywhere.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-8 offset-lg-2 text-center">
            <h2 class="mb-4">Our Journey</h2>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-badge bg-primary"></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">2010</h4>
                        </div>
                        <div class="timeline-body">
                            <p>TenexCar was founded with a small fleet of 10 vehicles.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-badge bg-primary"></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">2015</h4>
                        </div>
                        <div class="timeline-body">
                            <p>Expanded to 5 major cities with a fleet of over 100 vehicles.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-badge bg-primary"></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">2020</h4>
                        </div>
                        <div class="timeline-body">
                            <p>Launched our website for easy bookings and introduced a range of electric vehicles.</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-badge bg-primary"></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">Today</h4>
                        </div>
                        <div class="timeline-body">
                            <p>Serving customers nationwide with a diverse fleet of over 500 vehicles and industry-leading customer satisfaction.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding: 20px 0;
    }

    .timeline-item {
        padding-left: 40px;
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-badge {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        position: absolute;
        left: 0;
        top: 5px;
    }

    .timeline-panel {
        border-left: 2px solid #007bff;
        padding-left: 20px;
    }
</style>